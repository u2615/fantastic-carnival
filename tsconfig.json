{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",
  "outDir": "lib",
  "include": ["src/**/*", "config/*"],
  "exclude": ["node_modules", ".vscode"],
  "baseUrl": ".",

  "compilerOptions": {
    "lib": ["es2022"],
    "module": "ES2022",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
