{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode"],
  "baseUrl": "./src",

  "compilerOptions": {
    "lib": ["es2022"],
    "declaration": true,
    "sourceMap": true,
    "module": "ES2022",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "lib"
  }
}
